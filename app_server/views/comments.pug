extends layout

include _include/commonFunctions.pug

block content
    .container
      section.comment-list(ng-controller="listCommentsCtrl")
        label(for="filter") Search by name
        input#filter(type="text" name='filter' ng-model='search.name')
        .container-article(ng-repeat="comment in data.comments | filter:search:strict")
          article.row(show-comment, tempcomment="comment")
          
    .container
      .widget-area.no-padding.blank
        .status-upload
          form#commentForma(action="/comments/new", method="post", role="form")
            .form-group
              label(for="username") Name:
              input.form-control(type="text" name="name" id="name")
            .form-group
              label(for="comment") Comment:
              textarea.form-control(rows="5" name="comment" id="comment")
            .form-group
              label(for="picupload") Upload Image
              .input-group
                span.input-group-btn
                  span.btn.btn-default.btn-file
                    | Browseâ€¦ 
                    input#imgInp(type="file")
                input.form-control(type="text" name="pic")
              div
                img#img-upload
            button.btn.btn-success.green(type="submit")
              i.fa.fa-share
              |  Share
        // Status Upload
      // Widget Area
    
